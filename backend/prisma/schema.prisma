generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Standard {
  id          Int       @id @default(autoincrement())
  title       String    @unique
  type        String
  version     String?
  description String?
  chapters    Chapter[]
  sections    Section[]

  @@index([type])
}

model Chapter {
  id          Int       @id @default(autoincrement())
  standardId  Int
  number      String
  title       String
  description String?
  standard    Standard  @relation(fields: [standardId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  sections    Section[]

  @@unique([standardId, number])
  @@index([standardId])
}

model Section {
  id            Int                    @id @default(autoincrement())
  standardId    Int
  chapterId     Int?
  sectionNumber String
  title         String
  fullTitle     String
  content       String
  anchorId      String                 @unique
  wordCount     Int                    @default(0)
  sentenceCount Int                    @default(0)
  embedding     Unsupported("vector")?
  chapter       Chapter?               @relation(fields: [chapterId], references: [id], onUpdate: NoAction)
  standard      Standard               @relation(fields: [standardId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([standardId, sectionNumber])
  @@index([standardId])
  @@index([chapterId])
  @@index([sectionNumber])
  @@index([embedding], map: "section_embedding_idx")
}
